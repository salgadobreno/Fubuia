<div id="header">
  <div id="logo_area">
    <div class="logo_holder">
      <div class="hide-mobile" style="position:absolute;right:18px;top:5px;-webkit-transform:rotate(25deg);-moz-transform:rotate(25deg);-o-transform:rotate(25deg);-ms-transform:rotate(25deg);transform:rotate(25deg);">
        <%= content_tag 'span', t('mobile-friendly') %>
        <%= image_tag "iphone_front_128px.png", :style => "height:70px;" %>
      </div>
      <a href="/" title="Fubúia" class="left">
        <%= image_tag "afento.png", :alt => "Fubúia", :id => "logo" %>
      </a>
    </div>
  </div>
  <div class="menu" id="category_menu">
    <div class="container">
      <div class="menu-categories-container">
        <nav id="nav-main" style="text-align:center">
          <ul id="menu-categories" class="menu" style="width:100%">
            <li>
              <a href="" title="Archive">Blog</a>
            </li>
            <li>
              <%= link_to t('pages.root.menu.como_funciona'), "#como-funciona", :id => "a-como-funciona" %>
            </li>
            <li>
              <%= link_to t('pages.root.menu.contato'), "#contato", :id => "contato" %>
            </li>
            <li class="last">
              <%= link_to new_event_path, :style => "color:red;font-size:13px;font-weight:normal;text-decoration:underline;"  do %>
                <% t('pages.events.new').html_safe %>
              <% end %>
            </li>
            <div class="login hide-mobile">
              <% if current_user %>
                <%= content_tag 'div' do %>
                  <% if session[:fuser] %>
                    <%= session[:fuser][:name] %>
                  <% end %>
                  <%= link_to "Logout", logout_path, {:id => "logout", :class => "button" } %>
                <% end %>
              <% else %>
                <a id="login" class="button fb" href="">Login</a>
              <% end %>
            </div>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div><!-- end #header -->
